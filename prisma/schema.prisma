generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  nickName    String   @unique
  name        String
  password    String
  phoneNumber String?
  point       Int      @default(0)
  card        Card[]
  market      Market[]
}

model Card {
  id          String  @id @default(uuid())
  name        String
  grade       String  @default("common")
  genre       String
  price       Int     @default(0)
  count       Int     @default(0)
  description String  @default("")
  imagePath   String
  user        User?   @relation(fields: [userId], references: [id])
  userId      String?
  Market      Market?
}

model Market {
  num     Int     @id @default(autoincrement())
  title   String
  content String
  user    User?   @relation(fields: [userId], references: [id])
  userId  String?
  card    Card?   @relation(fields: [cardId], references: [id])
  cardId  String  @unique
}
